<?xml version="1.0" encoding="utf-8"?>

<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="wrap_content"
    android:layout_width="match_parent">
        <RadioButton
            android:id="@+id/radio_most_popular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pref_popular_label"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton
            android:id="@+id/radio_best_rated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pref_best_rated_label"
            android:onClick="onRadioButtonClicked"/>
</RadioGroup>

