<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.udacity.gregor.popularmovies.DetailActivity">
    
    <ImageView
        android:id="@+id/iv_poster_detail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_image_height" />

    <TextView
        android:id="@+id/tv_original_title_label"
        android:layout_marginStart="@dimen/margin_side"
        android:text="@string/detail_original_title_label"
        app:layout_constraintTop_toBottomOf="@id/iv_poster_detail"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_original_title"
        android:layout_marginEnd="@dimen/margin_side"
        app:layout_constraintLeft_toRightOf="@+id/tv_original_title_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_poster_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_release_date_label"
        android:layout_marginStart="@dimen/margin_side"
        android:text="@string/detail_release_date_label"
        app:layout_constraintTop_toBottomOf="@id/tv_original_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_release_date"
        android:layout_marginEnd="@dimen/margin_side"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_original_title"
        app:layout_constraintLeft_toRightOf="@+id/tv_release_date_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_overview_label"
        android:layout_marginStart="@dimen/margin_side"
        android:text="@string/detail_overview_label"
        app:layout_constraintTop_toBottomOf="@id/tv_release_date"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_overview"
        android:layout_marginEnd="@dimen/margin_side"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_release_date"
        app:layout_constraintLeft_toRightOf="@id/tv_overview_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_vote_count_label"
        android:layout_marginStart="@dimen/margin_side"
        android:text="@string/detail_vote_count_label"
        app:layout_constraintTop_toBottomOf="@id/tv_overview"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_vote_count"
        android:layout_marginEnd="@dimen/margin_side"
        app:layout_constraintTop_toBottomOf="@id/tv_overview"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_vote_count_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />



</android.support.constraint.ConstraintLayout>

</ScrollView>